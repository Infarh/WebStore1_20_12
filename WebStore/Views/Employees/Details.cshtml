@model Employee

<div class="container">
    <h3>Сотрудник</h3>

    <dl class="dl-horizontal">
        <dt>Id</dt>
        <dd>@Model.Id</dd>

        <dt>Фамилия</dt>
        <dd>@Model.LastName</dd>

        <dt>Имя</dt>
        <dd>@Model.FirstName</dd>

        <dt>Отчество</dt>
        <dd>@Model.Patronymic</dd>

        <dt>Возраст</dt>
        <dd>@Model.Age</dd>
    </dl>
    
    <hr/>
    
    <a asp-action="Index" class="btn btn-default">К списку</a>
</div>
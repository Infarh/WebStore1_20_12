@model IEnumerable<WebStore.Domain.ViewModels.ProductViewModel>

<div class="features_items">
    <!--features_items-->
    <h2 class="title text-center">Товары из каталога</h2>
    
    @if (Model is null || !Model.Any())
    {
        <p>Товары в выдаче каталога отсутствуют</p>
    }
    else
    {
        foreach (var product in Model)
        {
            <partial name="Partial/_ProductCart" model="product"/>
        }
    }

    <ul class="pagination">
        <li class="active"><a href="">1</a></li>
        <li><a href="">2</a></li>
        <li><a href="">3</a></li>
        <li><a href="">&raquo;</a></li>
    </ul>
</div><!--features_items-->
@model IEnumerable<WebStore.Domain.ViewModels.BrandViewModel>

<div class="brands_products">
    <!--brands_products-->
    <h2>Бренды</h2>
    <div class="brands-name">
        <ul class="nav nav-pills nav-stacked">
            @foreach (var brand in Model.Where(brand => brand.ProductsCount > 0))
            {
                <li>
                    <a asp-controller="Catalog" asp-action="Shop" asp-route-BrandId="@brand.Id">
                         <span class="pull-right">(@brand.ProductsCount)</span>@brand.Name
                    </a>
                </li>
            }
        </ul>
    </div>
</div><!--/brands_products-->
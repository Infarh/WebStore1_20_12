@using WebStore.Domain.Entities.Identity
@model IEnumerable<WebStore.Domain.Models.Employee>

<!DOCTYPE html>

<div class="container">
    <h3>Сотрудники</h3>
    
    @if (User.IsInRole(Role.Administrator))
    {
        <div>
            <a asp-action="Create" class="btn btn-primary">Создать</a>
        </div>
    }

    <table class="table">
        <thead>
        <tr>
            <th>#</th>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th></th>
            @if (User.IsInRole(Role.Administrator))
            {
                <th></th>
                <th></th>
            }
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.LastName</td>
                <td>@employee.FirstName</td>
                <td>@employee.Patronymic</td>
                <td>@employee.Age</td>
                <td>
                    <a asp-action="Details" asp-route-id="@employee.Id">
                        <i class="fa fa-info-circle"></i>
                    </a>
                </td>
                @if (User.IsInRole(Role.Administrator))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                    <td>
                        <form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fa fa-times"></i>
                            </button>
                        </form>
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>
</div>
